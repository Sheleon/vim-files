-module(ole_replicant_sup).
-behaviour(supervisor).

-export([
    start_link/0, init/1
]).

start_link() ->
    supervisor:start_link({local, ?MODULE}, ?MODULE, []).

init([]) ->
    ReplicantChild = {ole_replicant_server, {ole_replicant_server, start_link, []}, permanent, 5000, worker, [ole_replicant_server]},
    Children = [ReplicantChild],
    RestartStrategy = {one_for_one, 5, 10},
    {ok, {RestartStrategy, Children}}.
