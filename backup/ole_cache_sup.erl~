-module(ole_cache_sup).
-behaviour(supervisor).

-export([
    start_link/0, init/1
]).

start_link() ->
    supervisor:start_link({local, ?MODULE}, ?MODULE, []).

init([]) ->
    CacheChild = {ole_cache_server, {ole_cache_server, start_link, []}, permanent, 5000, worker, [ole_cache_server]},
    Children = [CacheChild],
    RestartStrategy = {one_for_one, 5, 10},
    {ok, {RestartStrategy, Children}}.
