all:
	(mkdir -p log/sasl)
	(git archive --format=tar --prefix=apps/external_tests/priv/ole-reference-python/ --remote=ssh://git.cm.aol.com/nullsoft/ole-reference-python master | tar -xf -)
	(git archive --format=tar --prefix=apps/external_tests/priv/ole-reference-protocol/ --remote=ssh://git.cm.aol.com/nullsoft/ole-reference-protocol master | tar -xf -)
	(rebar get-deps)
	(rebar compile)
clean:
	(rm -rf apps/external_tests/priv/ole-reference-python)
	(rm -rf apps/external_tests/priv/ole-reference-protocol)
	(rm -rf apps/*/ebin)
	(rm -rf apps/*/deps)
	(rm -rf deps)
	(rm -rf priv/log)
	(rm -f *.dump)
	(rm -rf rel/ole)
	(rm -rf /tmp/winamp_stats)
	(rm -rf log/*)
