-module(ole_store_sup).
-behaviour(supervisor).

-export([
    start_link/0, init/1
]).

start_link() ->
    supervisor:start_link({local, ?MODULE}, ?MODULE, []).

init([]) ->
    StoreChild = {
        ole_store_server, 
        {ole_store_server, start_link, []}, 
        permanent, 
        5000, 
        worker, 
        [ole_store_server]
    },
    FSChild = {
        ole_store_fs_server, 
        {ole_store_fs_server, start_link, []}, 
        permanent, 
        5000, 
        worker, 
        [ole_store_fs_server]
    },
    Children = [StoreChild, FSChild],
    RestartStrategy = {one_for_one, 5, 10},
    {ok, {RestartStrategy, Children}}.
