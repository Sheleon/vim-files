-module(winamp_stats_collector_sup).
-behaviour(supervisor).

-export([
    start_link/0, init/1
]).

start_link() ->
    supervisor:start_link({local, ?MODULE}, ?MODULE, []).

init([]) ->
    CacheChild = {
        winamp_stats_collector_server,
        {winamp_stats_collector_server, start_link, [100]},
        permanent,
        60000,
        worker,
        [winamp_stats_collector_server]
    },
    Children = [CacheChild],
    RestartStrategy = {one_for_one, 5, 10},
    {ok, {RestartStrategy, Children}}.
