-module(ole_cache_element_sup).
-behaviour(supervisor).

-export([
    start_link/0, start_child/2,
    init/1
]).

start_link() ->
    supervisor:start_link({local, ?MODULE}, ?MODULE, []).

start_child(Value, LeaseTime) ->
    supervisor:start_child(?MODULE, [Value, LeaseTime]).

init([]) ->
    Element = {ole_cache_element, {ole_cache_element, start_link, []}, temporary, brutal_kill, worker, [ole_cache_element]},
    Children = [Element],
    RestartStrategy = {simple_one_for_one, 0, 1},
    {ok, {RestartStrategy, Children}}.
