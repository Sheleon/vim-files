#!/bin/bash

if [ -t 0 ]; then stty -echo -icanon time 0 min 0; fi

count=0
keypress=''
while [ "x$keypress" = "x" ]; do
    let count+=1
    echo -ne $count'\r'
    curl "http://localhost:8001?ID=`date +'%Y%M%d%H%M%S'`$RANDOM&st1=$RANDOM&st2=$RANDOM&st3=$RANDOM&st4=$RANDOM&st5=$RANDOM&st6=$RANDOM&st7=$RANDOM&st8=$RANDOM&st9=$RANDOM&st10=$RANDOM&st11=$RANDOM&st12=$RANDOM&st13=$RANDOM&st14=$RANDOM&st15=$RANDOM&st16=$RANDOM&st17=$RANDOM&st18=$RANDOM&st19=$RANDOM&st20=$RANDOM&st21=$RANDOM&st22=$RANDOM&st23=$RANDOM&st24=$RANDOM&st25=$RANDOM&st26=$RANDOM&skin=skinis$RANDOM&ct=colortheme$RANDOM&lang=langis$RANDOM&pmp=pmpis$RANDOM"
    read keypress
done

if [ -t 0 ]; then stty sane; fi

echo "You pressed '$keypress' after $count loop iterations"
echo "Thanks for using this script."
exit 0
