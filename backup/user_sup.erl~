-module(user_sup).
-behaviour(supervisor).

-export([
    start_link/0, init/1
]).

start_link() ->
    supervisor:start_link({local, ?MODULE}, ?MODULE, []).

init([]) ->
    UserChild = {
        user_server,
        {user_server, start_link, []},
        permanent,
        5000,
        worker,
        [user_server]
    },
    Children = [UserChild],
    RestartStrategy = {one_for_one, 5, 10},
    {ok, {RestartStrategy, Children}}.

