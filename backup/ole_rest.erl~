-module(ole_rest).
-behaviour(application).

-export([start/0, start/2, stop/1]).

start() ->
    application:start(ole_rest).

start(_Type, _StartArgs) ->
    Options = [
        {port, 8000},
        {name, ole_rest},
        {loop, fun(Req) -> ole_rest_server:handle_http(Req) end}
    ],
    lager:info("ole_rest on port 8000"),
    ole_rest_sup:start_link(Options).

stop(_State) ->
    ok.
