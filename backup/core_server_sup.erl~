-module(core_server_sup).
-behaviour(supervisor).

-export([start_link/0]).
-export([init/1, tests/0]).

-define(SUPERVISOR, ?MODULE).

start_link() ->
    supervisor:start_link({local, ?SUPERVISOR}, ?MODULE, []).

%% supervisor.
init([]) ->
    {ok, {{one_for_one, 10, 10}, []}}.

tests() ->
    {tests, [
        test_alpha(),
        test_beta()
    ]}.

test_alpha() ->
    {test_alpha, ok}.

test_beta() ->
    {test_beta, "Epic Fail"}.
